<link rel="stylesheet" href="/css/style.css">

<div class="container-fluid row">
  <div class="login-card, col-lg-6 login pt-4 mt-4 pr-4">
    <h3 class="page-title, audiowidefont divider">Login</h3>
    <form action="/auth/loginByUsername" method="post" class="form login-form">
      <div class="form-group">
        <label for="username" class="monacofont font-weight-bold">Username:
          <i class="fas fa-user"></i>
        </label>
        <input name="username" placeholder="Username" id="username" class="userInfoForm form-input" type="text" required/>
      </div>
      <div class="form-group">
        <label for="password" class="monacofont font-weight-bold">Password:
          <i class="fas fa-lock"></i>
        </label>
        <input name="password" placeholder="Password" id="password" class="userInfoForm form-input" type="password" required/>
      </div>
      <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary gameButtonStyle br: 6px">
      </div>
    </form>
  </div>

  <div class="login-card, col-lg-6 pt-4 mt-4 leftBoarder pl-4">
    <h3 class="page-title, audiowidefont divider ">Signup</h3>
    <form action="/auth/register" method="post" class="form signup-form">
      <div class="form-group">
        <label for="username-signup" class="monacofont font-weight-bold">Username:</label>
        <input name="username" class="userInfoForm form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="monacofont font-weight-bold">Email:</label>
        <input name="email" class="userInfoForm form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="monacofont font-weight-bold">Password:</label>
        <input name="password" class="userInfoForm form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <input class="btn btn-primary gameButtonStyle" value="register" type="submit">
      </div>
    </form>
  </div>
</div>