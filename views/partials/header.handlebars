                    <button type="button" class="btn-sm btn-primary" onclick="startStopwatch()">Start</button>
                    <button type="button" class="btn-sm btn-primary" onclick="stopStopwatch()">Stop</button>
                    <button type="button" class="btn-sm btn-primary" onclick="resetStopwatch()">Reset</button>
